@page
@model NutritionTrackerRazorPages.Pages.SimpleFoods.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SimpleFood</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SimpleFood.Id" />
            <div class="form-group">
                <label asp-for="SimpleFood.Name" class="control-label"></label>
                <input asp-for="SimpleFood.Name" class="form-control" />
                <span asp-validation-for="SimpleFood.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.FoodCategoryId" class="control-label"></label>
                <select asp-for="SimpleFood.FoodCategoryId" class="form-control" asp-items="ViewBag.FoodCategoryId"></select>
                <span asp-validation-for="SimpleFood.FoodCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.ServingSize" class="control-label"></label>
                <input asp-for="SimpleFood.ServingSize" class="form-control" />
                <span asp-validation-for="SimpleFood.ServingSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.Calories" class="control-label"></label>
                <input asp-for="SimpleFood.Calories" class="form-control" />
                <span asp-validation-for="SimpleFood.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.Fat" class="control-label"></label>
                <input asp-for="SimpleFood.Fat" class="form-control" />
                <span asp-validation-for="SimpleFood.Fat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.Carbohydrates" class="control-label"></label>
                <input asp-for="SimpleFood.Carbohydrates" class="form-control" />
                <span asp-validation-for="SimpleFood.Carbohydrates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SimpleFood.Protein" class="control-label"></label>
                <input asp-for="SimpleFood.Protein" class="form-control" />
                <span asp-validation-for="SimpleFood.Protein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
